<UserControl x:Class="Aurora.Settings.Control_LayerManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Settings"
             mc:Ignorable="d" d:DesignWidth="180" MinWidth="180" MinHeight="180">
    <Grid>
        <Border Background="#A5000000" CornerRadius="8" />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Layers" VerticalAlignment="Top" Margin="5,10,0,0"/>
        <Button x:Name="add_layer_button" Content="Add" Margin="0,8,56,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="26" Click="add_layer_button_Click"/>
        <Button x:Name="remove_layer_button" Content="Remove" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,5,0"/>
        <ListBox x:Name="layers_listbox" Margin="0,33,0,0" />
    </Grid>
</UserControl>
