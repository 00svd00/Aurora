<UserControl x:Class="Aurora.Controls.Control_AnimationMixPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="184.322" d:DesignWidth="300">
    <Grid>
        <Button x:Name="btnAddTrack" Content="Add Track" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,0,0,0"/>
        <ScrollViewer Margin="0,27,0,0" HorizontalScrollBarVisibility="Visible">
            <Grid>
                <local:Control_Ruler Margin="100,0,0,0" />
                <StackPanel x:Name="stkPanelTracks" Margin="0,27,0,0">
                    <local:Control_AnimationTrackPresenter />
                    <Separator/>
                    <local:Control_AnimationTrackPresenter />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
