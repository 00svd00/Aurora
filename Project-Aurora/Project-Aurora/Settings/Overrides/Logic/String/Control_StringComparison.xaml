<UserControl x:Class="Aurora.Settings.Overrides.Logic.Control_StringComparison"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:logic="clr-namespace:Aurora.Settings.Overrides.Logic"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <logic:Control_EvaluatablePresenter Grid.Column="0" Expression="{Binding Logic.Operand1, Mode=TwoWay}" Application="{Binding Application}" EvalType="String" />
        <ComboBox x:Name="operatorSelection" Grid.Column="1" SelectedValue="{Binding Logic.Operator, Mode=TwoWay}" SelectedValuePath="Value" DisplayMemberPath="Key" VerticalAlignment="Center" />
        <logic:Control_EvaluatablePresenter Grid.Column="2" Expression="{Binding Logic.Operand2, Mode=TwoWay}" Application="{Binding Application}" EvalType="String" />
        <CheckBox Grid.Column="3" Content="Case insensitive?" IsChecked="{Binding Logic.CaseInsensitive, Mode=TwoWay}" VerticalAlignment="Center" />
    </Grid>
</UserControl>
