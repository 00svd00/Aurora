<UserControl x:Class="Aurora.Settings.Overrides.Logic.Generic.Control_Delay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:Aurora.Settings.Overrides.Logic" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d">
    <StackPanel>
        <l:Control_EvaluatablePresenter Expression="{Binding Path=Source, Mode=TwoWay}" EvalType="{Binding EvalType, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
        <StackPanel Orientation="Horizontal">
            <Label FontWeight="Bold">Delay:</Label>
            <xctk:DoubleUpDown MinWidth="38" Value="{Binding Path=Delay, Mode=TwoWay}" />
            <Label>secs</Label>
        </StackPanel>
    </StackPanel>
</UserControl>
