<UserControl x:Class="Aurora.Settings.Conditions.Control_ConditionNot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Settings.Conditions"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="!" VerticalAlignment="Center" ToolTip="Not" />
        <local:Control_ConditionPresenter Condition="{Binding ParentCondition.SubCondition}" Application="{Binding Application}" ConditionChanged="ConditionPresenter_ConditionChanged" />
    </StackPanel>
</UserControl>
