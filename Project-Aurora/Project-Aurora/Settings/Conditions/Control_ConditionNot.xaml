             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Settings.Conditions"
             mc:Ignorable="d">
    <Grid>
        <TextBlock Text="!" FontSize="18" VerticalAlignment="Center" />
        <local:Control_ConditionPresenter Condition="{Binding ParentCondition.SubCondition}" Application="{Binding Application}" ConditionChanged="ConditionPresenter_ConditionChanged" Margin="15,0,0,0" />
    </Grid>
