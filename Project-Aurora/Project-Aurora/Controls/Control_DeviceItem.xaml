<UserControl x:Class="Aurora.Controls.Control_DeviceItem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Aurora.Controls" mc:Ignorable="d" MinWidth="500" d:DesignWidth="500" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="55" />
            <ColumnDefinition Width="55" />
            <ColumnDefinition Width="55" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="deviceName" Text="Name" HorizontalAlignment="Left" Grid.Column="0" />
        <TextBlock x:Name="deviceDetails" Text="Details" HorizontalAlignment="Left" Grid.Column="1" />
        <TextBlock x:Name="devicePerformance" Text="0 ms" HorizontalAlignment="Right" Margin="2" Grid.Column="2" />
        <Button x:Name="btnStart" Content="Start" Margin="2" Grid.Column="3" />
        <Button x:Name="btnEnable" Content="Enabled" Margin="2" Grid.Column="4" />
        <Button x:Name="btnOptions" Content="Options" Margin="2" Grid.Column="5" />
    </Grid>
</UserControl>
